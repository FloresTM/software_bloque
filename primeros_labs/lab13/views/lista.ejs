<%- include('includes/head.ejs') %>
<!-- <div style="display: flex; flex-direction: row;"> -->
    <%- include('includes/menu.ejs') %>

    <div class="main_content">
        <!-- <%- include('includes/nuevo.ejs') %> -->

    <div id="content_section">
        <% for (let usuario of usuarios) { %>

            <div class="card">
                <div class="top">
                    <div class="userDeatils">
                        <div class="profileImg">
                            <img src="<%= usuario.pp %>" alt="user" class="cover">
                        </div>
                        <h3>
                        <%= usuario.nombre %><br><span style="font-size: 0.75em;"><%= usuario.escuela %></span></h3>
                    </div>
                    <div class="dot">
                        <img src="dot.png" alt="dot">
                    </div>
                </div>
                <div class="imgBg">
                    <img src="" alt="bg" class="cover">
                    <!-- <%= usuario.pp %> -->
                </div>
                <div class="btns">
                    <div class="left">
                        <img src="heart.png" alt="heart" class="heart" onclick="likeButton()">
                        <img src="comment.png" alt="comment" style="max-width: 24px;
            cursor: pointer; margin-right: 8px;">
                        <img src="share.png" alt="share">
                    </div>
                    <div class="right">
                        <img src="bookmark.png" alt="bookmark">
                    </div>
                </div>
                <h4 class="likes"><%= usuario.likes %> likes</h4>
                <h4 class="message">
                    <b><%= usuario.nombre %></b>
                    <%= usuario.descripcion %>
                </h4>
                <h4 class="comments">View all 546 comments</h4>
                <div class="addComments">
                    <div class="userImg">
                        <img src="<%= usuario.pp %>" alt="user" class="cover">
                    </div>
                    <input type="text" class="text">
                </div>
                <h5 class="postTime">5 hours ago</h5>
            </div>

            <% } %>
    </div>
</div>

